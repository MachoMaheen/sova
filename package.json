{
  "name": "file-explorer",
  "version": "1.0.0",
  "description": "Simple Electron file explorer with delete functionality",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch\" \"npm run electron-dev\"",
    "electron-dev": "wait-on dist/main.js && electron .",
    "watch": "webpack --watch",
    "build": "webpack --mode production",
    "package": "electron-builder build --linux --win --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "file-explorer",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fontsource/nunito-sans": "^5.2.5",
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^2.0.0",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "css-loader": "^6.7.3",
    "electron-reload": "^2.0.0-alpha.1",
    "mini-css-extract-plugin": "^2.7.3",
    "path-browserify": "^1.0.1",
    "postcss-loader": "^7.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.2",
    "webpack": "^5.76.1",
    "webpack-cli": "^5.0.1"
  },
  "build": {
    "appId": "com.electron.fileexplorer",
    "productName": "File Explorer",
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
